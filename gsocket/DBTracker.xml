		</Object>
		<Object name="DBTracker" user="root" pswd="" host="127.0.0.1" port="3306" database="gvtracker" charSet="utf8">
			<Tables>
				<table name="TrackerInfo">
					<field name="id" type="char(16)" constraint="primary key"/>
					<field name="valid" type="BIGINT" constraint="DEFAULT '-1'" />
					<field name="lat" type="double" />
					<field name="lon" type="double" />
					<field name="timePos" type="BIGINT" />
				</table>
			</Tables>
			<SQLs>
				<SQL name="insertTracker" table="TrackerInfo" type="Insert" >
					<item name="id" type="Write" />
					<item name="authCheck" type="Write" />
				</SQL>
				<SQL name="maxUavId" table="TrackerInfo" type="Select" >
					<item name="max(id)" type="Read" sqlTp="char(16)" />
				</SQL>
				<SQL name="queryTracker" table="TrackerInfo" type="Select">
					<item name="id" ref="TrackerInfo" type="Read" />
					<item name="valid" ref="TrackerInfo" type="Read" />
					<item name="lat" ref="TrackerInfo" type="Read" />
					<item name="lon" ref="TrackerInfo" type="Read" />
					<item name="timePos" ref="TrackerInfo" type="Read" />
					<item name="id" type="Condition" />
				</SQL>
				<SQL name="deleteUavInfo" table="TrackerInfo" type="Delete" >
					<item name="id" type="Condition" />
				</SQL>
				<SQL name="updatePos" table="TrackerInfo" type="Update">
					<item name="lat" ref="TrackerInfo" type="Write"/>
					<item name="lon" ref="TrackerInfo" type="Write" />
					<item name="timePos" ref="TrackerInfo" type="Write" />
					<item name="id" type="Condition" />
				</SQL>
			</SQLs>
		</Object>
	</Manager>
